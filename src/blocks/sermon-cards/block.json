{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "ctx-sermons/sermon-cards",
	"title": "Sermon Cards",
	"category": "widgets",
	"icon": "smiley",
	"description": "Show sermons as Cards",
	"attributes": {
		"showTitle": {
			"type": "boolean",
			"default": true
		},
		"showImage": {
			"type": "boolean",
			"default": true
		},
		"limit": {
			"type": "number",
			"default": 5
		},
		"showDate": {
			"type": "boolean",
			"default": true
		},
		"showSpeaker": {
			"type": "boolean",
			"default": true
		},
		"showSeries": {
			"type": "boolean",
			"default": true
		},
		"showDescription": {
			"type": "boolean",
			"default": true
		},
		"showAudio": {
			"type": "boolean",
			"default": true
		},
		"showBiblePassage": {
			"type": "boolean",
			"default": true
		},
		"showSeriesLink": {
			"type": "boolean",
			"default": true
		},
		"showLink": {
			"type": "boolean",
			"default": true
		},
		"mediaId": {
			"type": "number",
			"default": 0
		},
		"mediaUrl": {
			"type": "string",
			"default": ""
		},
		"perRow": {
			"type": "number",
			"default": 1
		}
	},
	"example": {},
	"supports": {
		"html": false,
		"align": true,
		"color": {
			"background": true,
			"text": true
		},
		"multiple": false
	},
	"editorScript": "ctx-sermons-admin",
	"textdomain": "ctx-sermons",
	"editorStyle": "ctx-sermons-admin-style",
	"style": "ctx-sermons-cards-style",

	"viewScript": "ctx-sermons-cards"
}
